<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
">

    <util:list id="inetSocketAddressList">
        <bean  class="java.net.InetSocketAddress">
            <constructor-arg>
                <value>${memcached.port}</value>
            </constructor-arg>
        </bean>
    </util:list>
    
    <bean id="memcachedClient" class="net.spy.memcached.MemcachedClient">
        <constructor-arg>
            <ref bean="inetSocketAddressList"/>
        </constructor-arg>
    </bean>
                    
    <bean id="memcachedClientService" class="memcached.MemcachedClientService">
        <property name="memcachedClient">
            <ref bean="memcachedClient"/>
        </property>
    </bean>
    
    <bean id="useMemcached" class="memcached.UseMemcached">
        <property name="memcachedClinetService">
            <ref bean="memcachedClientService"/>
        </property>
    </bean>
    
    <bean id="" class="memcached.AccountUseMemcached">
        <property name="useMemcached">
            <ref bean="useMemcached"/>
        </property>
    </bean>
    
</beans>