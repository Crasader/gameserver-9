    <bean name="sqlCachedContainer" class="dao.sql.SqlCachedContainer"></bean>
    <bean name="sqlSupport" class="dao.sql.SqlSupport">
        <property name="sqlCachedContainer">
            <ref bean="sqlCachedContainer" />
        </property>
    </bean>
    
</beans>